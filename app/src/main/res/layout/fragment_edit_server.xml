<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.EditServerFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="20sp"
        android:padding="10dp">

        <TextView
            android:text="Server name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/etServerName"
            app:layout_constraintBottom_toBottomOf="@+id/etServerName"
            />

        <EditText
            android:id="@+id/etServerName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/main_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:text="Host IP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/etIp"
            app:layout_constraintBottom_toBottomOf="@+id/etIp"
            />

        <EditText
            android:id="@+id/etIp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/main_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etServerName"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:text="Port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/etPort"
            app:layout_constraintBottom_toBottomOf="@+id/etPort"
            />

        <EditText
            android:id="@+id/etPort"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/main_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etIp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:text="Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/etUsername"
            app:layout_constraintBottom_toBottomOf="@+id/etUsername"
            />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/main_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPort"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/etPassword"
            app:layout_constraintBottom_toBottomOf="@+id/etPassword"
            />

        <EditText
            android:id="@+id/etPassword"
            android:inputType="textPassword"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/main_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etUsername"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:text="Private key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/etPrivateKey"
            app:layout_constraintBottom_toBottomOf="@+id/etPrivateKey"
            />

        <EditText
            android:inputType="textPassword"
            android:backgroundTint="@color/main_color"
            android:id="@+id/etPrivateKey"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPassword"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/btnApply"
            android:text="Apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="100dp"
            />

        <Button
            android:id="@+id/btnCancel"
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="100dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>